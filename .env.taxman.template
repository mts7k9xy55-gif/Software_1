# =====================================================
# Tax man env template (safe placeholders only)
# Copy this file to .env.local and fill values.
# =====================================================

# -------------------------
# Core auth (required)
# -------------------------
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxx
CLERK_SECRET_KEY=sk_test_xxx

# -------------------------
# OCR / LLM (required for intake+classification)
# -------------------------
GEMINI_API_KEY=AIza_xxx
GEMINI_MODEL=gemini-2.5-flash-lite
ENABLE_EXTERNAL_LLM=1
ENABLE_RECEIPT_OCR=1

# -------------------------
# Region/accounting connectors
# -------------------------
# JP - freee
NEXT_PUBLIC_FREEE_CLIENT_ID=xxx
FREEE_CLIENT_SECRET=xxx
NEXT_PUBLIC_FREEE_REDIRECT_URI=https://pos.allgoai.org/api/freee/oauth/callback

# US - QuickBooks
QBO_CLIENT_ID=xxx
QBO_CLIENT_SECRET=xxx
QBO_REDIRECT_URI=https://pos.allgoai.org/api/connectors/oauth/callback?provider=quickbooks

# EU/TH - Xero
XERO_CLIENT_ID=xxx
XERO_CLIENT_SECRET=xxx
XERO_REDIRECT_URI=https://pos.allgoai.org/api/connectors/oauth/callback?provider=xero

# -------------------------
# Shared-token mode (pilot only, optional)
# If enabled, per-user OAuth cookies are bypassed.
# -------------------------
FREEE_SHARED_MODE=0
FREEE_SHARED_ACCESS_TOKEN=
FREEE_SHARED_REFRESH_TOKEN=
FREEE_SHARED_COMPANY_ID=

QBO_SHARED_MODE=0
QBO_SHARED_ACCESS_TOKEN=
QBO_SHARED_REFRESH_TOKEN=
QBO_SHARED_REALM_ID=

XERO_SHARED_MODE=0
XERO_SHARED_ACCESS_TOKEN=
XERO_SHARED_REFRESH_TOKEN=
XERO_SHARED_TENANT_ID=

# -------------------------
# Optional legacy / feature flags
# -------------------------
NEXT_PUBLIC_ENABLE_LEDGER=0
ENABLE_PROPHET=0
ENABLE_OLLAMA=0
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen3:8b

# Optional alternate classifier providers
GROQ_API_KEY=
GROQ_MODEL=openai/gpt-oss-20b

# Optional Supabase (legacy endpoints only)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Optional freee HR endpoint (legacy shift sync)
FREEE_HR_SHIFT_SYNC_URL=
